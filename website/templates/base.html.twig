<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="icon" href="{{ asset('build/assets/dist/icons/favicon.ico') }}">
        <title>
            {% block title %}
                Anime Panda -
                {% block subtitle %}

                {% endblock %}
            {% endblock %}
        </title>
        {% block stylesheets %}
            {{ encore_entry_link_tags("app") }}
        {% endblock %}
    </head>
    <body>
        {% block body %}

            <aside>
                {% block aside %}{% endblock %}
            </aside>

            <main>
                {% block main %}{% endblock %}
            </main>

            <nav>
                {% include 'partials/nav.html.twig' %}
            </nav>

            {% include 'partials/footer.html.twig' %}

            {% block javascripts %}
                {{ encore_entry_script_tags("app") }}
            {% endblock %}
        {% endblock %}
    </body>
</html>
