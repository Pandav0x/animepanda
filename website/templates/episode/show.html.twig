{% extends 'base.html.twig' %}

{% block subtitle %}
    {{ episode.serie.name }} Episode {{ episode.number }}
{% endblock %}

{% block main %}
    <h1>{{ episode.serie.name }} Episode {{ episode.number }}</h1>

    <video width="320" height="240" controls>
        <source src="{{ episode.url }}" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <a href="{{ path('episode_index') }}">back to list</a>

    <a href="{{ path('episode_edit', {'id': episode.id}) }}">edit</a>

    <h2>Tags</h2>
    <ul>
        {% for tag in episode.tags %}
            <li>{{ tag.name }}</li>
        {% endfor %}
    </ul>
{% endblock %}

{% block aside %}
    <h2>Of the same serie</h2>
    <ul>
        {% for ep in episode.serie.episodes | slice(0, 4) %}
            {% if ep.id != episode.id %}
            <li><a href="{{ path('episode_show',{'id': ep.id}) }}">{{ ep.serie.name }} - Episode {{ ep.number }}</a></li>
            {% endif %}
        {% endfor %}
    </ul>

    <h2>With tag related</h2>
    <ul>
        {% for tag in episode.tags %}
            {% for ep in tag.episodes | slice(0, 20) %}
                {% if ep.id != episode.id %}
                    <li><a href="{{ path('episode_show', {'id': ep.id}) }}">{{ tag.name }} tag: {{ ep.serie.name }} Ep {{ ep.number }}</a></li>
                {% endif %}
            {% endfor %}
        {% endfor %}
    </ul>
{% endblock %}
